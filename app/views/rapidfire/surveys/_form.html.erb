<h3><%= survey.new_record? ? "New Survey" : "Edit Survey" %></h3>

<%= form_for survey do |f| %>
  <%- if survey.errors.any? %>
    <ul>
      <%- survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :version %>
    <%= f.text_field :version %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 5 %>
  </div>

  <%= f.label :active %>
  <%= f.text_field :active %>

  <%#= f.label :after_survey_content %>
  <%#= f.text_area :after_survey_content %>

  <%= f.submit %>
<% end %>
